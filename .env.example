# Biskaken Admin API - Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_here
JWT_EXPIRES_IN=7d

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/biskaken_auto
DB_HOST=localhost
DB_PORT=5432
DB_NAME=biskaken_auto
DB_USER=postgres
DB_PASSWORD=your_secure_password

# CORS Origins (Frontend URLs)
CORS_ORIGINS=https://biskakenauto.rpnmore.com,http://localhost:3000

# Default Admin User (Change these!)
DEFAULT_ADMIN_EMAIL=admin@biskaken.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Biskaken Admin

# API Configuration
API_BASE_URL=https://bisadmin.rpnmore.com